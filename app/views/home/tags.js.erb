$('#mobile-articles').append("<%= escape_javascript(render partial: 'mobile_index', :locals => { :articles => @articles }) %>");
$('#main-articles').append("<%= escape_javascript(render partial: 'index', :locals => { :articles => @articles }) %>");
$('a.load-more-tags').attr('href', "<%= tag_path page: @articles.next_page %>");

<% unless @articles.next_page %>
$('a.load-more-tags').remove();
<% end %>