$modal = $('#modal-article'),
$modalBody = $('#modal-article .modal-body'),
$modalHeading = $('#modal-article .modal-heading');
$modal.css({width: '1100px', height: '800px'});
$modalHeading.html("<%= @article.title %>");
$modalBody.html('<iframe width="100%" height="98%" frameborder="0" allowtransparency="true" src="<%= @article.permalink %>" ></iframe>');
$modalBody.css({width: '96%', height: '750px', overflow: 'hidden'});
$modal.modal();
