<div class="row list-group">

      <% @articles.each do |article| %>
          <div class="item col-xs-12 col-sm-6 col-md-4 list-group-item">

            <div class="thumbnail">
              <%= link_to image_tag(article.image.url(:medium), data: {src: article.image.url(:medium)}, :class => 'group list-group-image'), show_path(id: article.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-article'} %>
              <div class="caption">
                <h5 class="group inner list-group-item-heading"><%= article.title %> </h5>
				<div class"group inner list-group-item-text">
                	<span class="label label-primary"><%= link_to article.site_list.first.titleize, tag_path(article.site_list.first) %> </span>
                	<p> <i class="pull-left fa fa-clock-o icon-cx"> </i> <%= "hÃ¡ " + time_ago_in_words(article.published_at) %> </p>
				</div>
                <div class="row">
					<div class="col-xs-12 col-md-6">
                  	  <% article.tag_list.each do |t| %>
                        <span class="pull-left label label-info">
                            <%= link_to t.titleize, tag_path(t) %>
                        </span>
                  	  <% end %>
				  </div>
                </div>
              </div>
          </div>
          </div>
      <% end %>

</div>
<div class="row">
  <div class="col-4">
    <%= image_tag("http://placehold.it/728x90", :class => 'img-responsive', :id => 'main-large-ad') %>
  </div>
</div>
