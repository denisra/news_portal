<%- model_class = Article -%>
<div class="page-header">

<div id="main-carousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#main-carousel" data-slide-to="1"></li>
    <li data-target="#main-carousel" data-slide-to="2"></li>
    <li data-target="#main-carousel" data-slide-to="3"></li>
    <li data-target="#main-carousel" data-slide-to="4"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
	<%= link_to image_tag(@articles_featured.first.image.url(:carousel)), show_path(id: @articles_featured.first.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-article'} %>
	<div class="carousel-caption">
	  <h4><%= link_to @articles_featured.first.title, show_path(id: @articles_featured.first.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-article'} %>
	  <p><%= @articles_featured.first.permalink %>
	</div>

    </div>

    <% @articles_featured[1..-1].each_with_index do |article| %>
        <div class="item">
            <%= link_to image_tag(article.image.url(:carousel)), show_path(id: article.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-article'} %>
            <div class="carousel-caption">
            <h4><%= link_to article.title, show_path(id: article.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-article'} %>
            <p><%= article.permalink %>
            </div>
        </div>
    <% end %>

  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#main-carousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#main-carousel" data-slide="next">&rsaquo;</a>
</div>



</div>

<div class="container" id="main-articles">
  <%= render :partial => 'index', :locals => {:articles => @articles} %>
</div>

